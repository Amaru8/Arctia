{
  "name": "cider-remote",
	"displayName": "Cider Remote",
	"description": "This extension is a remote for the open-source Apple Music client, Cider",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.66.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
        "onCommand:cider-remote.helloWorld",
		"onView:cider-remote-sidebar"
	],
	"main": "./extension.js",
	"contributes": {
		"commands": [{
            "command": "cider-remote.helloWorld",
            "title": "Hello World"
		}],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "cider-remote-sidebar-view",
					"title": "Cider Remote",
					"icon": "smartphone.svg"
				}
			]
		},
		"views": {
			"cider-remote-sidebar-view": [
				{
					"type": "webview",
					"id": "cider-remote-sidebar",
					"name": "Cider Remote",
					"icon": "smartphone.svg",
					"contextualTitle": "Cider Remote"
				}
			]
		}
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "yarn run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
        "@types/vscode": "^1.66.0",
        "@types/glob": "^7.2.0",
        "@types/mocha": "^9.1.0",
        "@types/node": "14.x",
        "eslint": "^8.11.0",
        "glob": "^7.2.0",
        "mocha": "^9.2.2",
        "typescript": "^4.5.5",
        "@vscode/test-electron": "^2.1.3"
    }

}
